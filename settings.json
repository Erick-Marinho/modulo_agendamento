{
  // =============================================================================
  // CONFIGURAÇÕES GERAIS DO EDITOR
  // =============================================================================
  "editor.fontFamily": "\"JetBrains Mono\", 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.organizeImports.python": "explicit"
  },

  // =============================================================================
  // CONFIGURAÇÕES DO WORKBENCH E INTERFACE
  // =============================================================================
  "workbench.colorTheme": "One Dark Modern Classic",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {},
  "workbench.editorAssociations": {
    "*.xlsx": "default"
  },
  "window.commandCenter": true,
  "material-icon-theme.activeIconPack": "nest",
  "material-icon-theme.folders.theme": "specific",

  // =============================================================================
  // CONFIGURAÇÕES DE ARQUIVOS E GIT
  // =============================================================================
  "files.exclude": {
    ".github": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "diffEditor.ignoreTrimWhitespace": false,

  // =============================================================================
  // CONFIGURAÇÕES DO TERMINAL
  // =============================================================================
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.copyOnSelection": true,

  // =============================================================================
  // CONFIGURAÇÕES POR LINGUAGEM
  // =============================================================================

  // JavaScript e TypeScript
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "never",

  // Python
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "python.formatting.blackArgs": [
    "--line-length",
    "88"
  ],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=88"
  ],
  "python.linting.mypyEnabled": true,
  "python.sortImports.args": [
    "--profile",
    "black"
  ],
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.createEnvironment.trigger": "off",

  // CSS e Estilos
  "css.validate": true,
  "scss.validate": false,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },

  // =============================================================================
  // CONFIGURAÇÕES DE EXTENSÕES
  // =============================================================================

  // ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": ["./client", "./server"],

  // Prettier
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.useTabs": false,
  "prettier.printWidth": 80,

  // Stylelint
  "stylelint.enable": true,

  // GitHub Copilot
  "github.copilot.editor.enableAutoCompletions": true,

  // DocsView
  "docsView.documentationView.updateMode": "live",

  // Spell Checker
  "cSpell.language": "en,pt-BR",
  "cSpell.enabled": false,

  // Remote Development
  "remote.autoForwardPortsSource": "hybrid",

  // =============================================================================
  // CONFIGURAÇÕES DO CURSOR
  // =============================================================================
  "cursor.composer.shouldAllowCustomModes": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.general.globalCursorIgnoreList": [
    "**/credentials.json",
    "**/credentials.*.json",
    "**/secret.json",
    "**/secrets.json",
    "**/*.key",
    "**/*.pem",
    "**/*.pfx",
    "**/*.p12",
    "**/*.crt",
    "**/*.cer",
    "**/id_rsa",
    "**/id_dsa",
    "**/.ssh/id_*"
  ]
} 